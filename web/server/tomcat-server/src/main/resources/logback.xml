<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="15 seconds" debug="false">
  <conversionRule conversionWord="requestId" converterClass="org.visallo.core.logging.RequestId$Converter" />
  <conversionRule conversionWord="userId" converterClass="org.visallo.core.logging.UserSessionId$Converter" />
  <conversionRule conversionWord="clientIpAddress" converterClass="org.visallo.core.logging.ClientIP$Converter" />
  <conversionRule conversionWord="logType" converterClass="org.visallo.core.logging.LogType$Converter" />
  <conversionRule conversionWord="methodName" converterClass="org.visallo.core.logging.MethodName$Converter" />
  <conversionRule conversionWord="hostName" converterClass="org.visallo.core.logging.HostName$Converter" />
  <conversionRule conversionWord="requestScope" converterClass="org.visallo.core.logging.RequestIdByScope$Converter" />
  <conversionRule conversionWord="route" converterClass="org.visallo.core.logging.Route$Converter" />
  <conversionRule conversionWord="elapsed" converterClass="org.visallo.core.logging.Elapsed$Converter" />
  <conversionRule conversionWord="elapsedFrom" converterClass="org.visallo.core.logging.ElapsedFrom$Converter" />
  <conversionRule conversionWord="responseLength" converterClass="org.visallo.core.logging.ResponseLength$Converter" />

  <!-- appenders -->
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <withJansi>true</withJansi>
    <encoder>
      <pattern>%green(%-23requestId) %green(%-23userId) %white(%-26d{ISO8601}) %yellow(%-6elapsed) %yellow(%-6elapsedFrom)  %white(%-8level) %magenta(%-17thread) %cyan(%-46logger{5}) %cyan(%-8logType) %cyan(%-20methodName) %white(%msg%n) %boldRed(%ex{15}) %nopex</pattern>
    </encoder>
  </appender>

  <appender name="filetrace" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>log/trace.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>log/trace.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>5</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%-15hostName %-23requestId %-23userId %-20clientIpAddress %-8requestScope %-26d{ISO8601} %-6elapsed %-6elapsedFrom %-8level %-17thread %-46logger{5} %-8logType %-20methodName %msg%n %ex{15} %nopex</pattern>
    </encoder>
  </appender>

  <appender name="es-error-filetrace" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>log/es-error-trace.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>log/es-error-trace.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>5</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%-26d{ISO8601} %-8level %-46logger{5} %msg%n %ex{15} %nopex</pattern>
    </encoder>
  </appender>

  <appender name="elasticsearch" class="com.internetitem.logback.elasticsearch.ElasticsearchAppender">
    <url>http://elasticsearch:9200/_bulk</url>
    <index>engine-logs-%date{yyyy-MM}</index>
    <type>log</type>
    <errorLoggerName>es-error-logger</errorLoggerName>
    <properties>
      <property>
        <name>host</name>
        <value>%hostName</value>
        <allowEmpty>false</allowEmpty>
      </property>
      <property>
        <name>clientIpAddress</name>
        <value>%clientIpAddress</value>
        <allowEmpty>false</allowEmpty>
      </property>
      <property>
        <name>requestId</name>
        <value>%requestId</value>
      </property>
      <property>
        <name>requestScope</name>
        <value>%requestScope</value>
        <allowEmpty>false</allowEmpty>
      </property>
      <property>
        <name>userId</name>
        <value>%userId</value>
        <allowEmpty>false</allowEmpty>
      </property>
      <property>
        <name>level</name>
        <value>%level</value>
      </property>
      <property>
        <name>exception</name>
        <value>%ex</value>
      </property>
      <property>
        <name>thread</name>
        <value>%thread</value>
      </property>
      <property>
        <name>logger</name>
        <value>%logger{5}</value>
      </property>
      <property>
        <name>logType</name>
        <value>%logType</value>
      </property>
      <property>
        <name>methodName</name>
        <value>%methodName</value>
      </property>
      <property>
        <name>elapsed</name>
        <value>%elapsed</value>
      </property>
      <property>
        <name>elapsedFrom</name>
        <value>%elapsedFrom</value>
      </property>
      <property>
        <name>route</name>
        <value>%route</value>
      </property>
      <property>
        <name>responseLength</name>
        <value>%responseLength</value>
      </property>
    </properties>
    <headers>
      <header>
        <name>Content-Type</name>
        <value>application/json</value>
      </header>
    </headers>
  </appender>
  <!-- appenders -->

  <!-- Ignore loggers -->
  <logger name="org.elasticsearch" additivity="true"/>
  <logger name="org.eclipse" additivity="false"/>
  <logger name="org.atmosphere" additivity="false"/>
  <logger name="org.apache" additivity="false"/>
  <logger name="io.netty" additivity="false"/>
  <logger name="org.visallo" additivity="true"/>
  <!-- Ignore loggers -->

  <!-- es error logger -->
  <logger name="es-error-logger" level="INFO" additivity="false">
    <appender-ref ref="es-error-filetrace"/>
  </logger>
  <!-- es error logger -->

  <!-- root -->
  <root level="info">
    <appender-ref ref="stdout" />
    <appender-ref ref="filetrace" />
    <appender-ref ref="elasticsearch"/>
  </root>
  <!-- root -->
</configuration>
